@{
  Layout = "_Layout";
}

<h1 class="jumbotron">Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input class="form-control" id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <div class="form-group">
    <label for="orderTitle">Order Number</label>
    <input class="form-control" id="orderTitle" name="orderTitle" type="text">
  </div>
  <div class="form-group">
    <label for="orderDescription">Order Description</label>
    <input class="form-control" id="orderDescription" name="orderDescription" type="text">
  </div>
  <div class="form-group">
    <label for="orderPrice">Order Price</label>
    <input class="form-control" id="orderPrice" name="orderPrice" type="number">
  </div>
  <div class=form-group>
    <label for="orderDate">Order Date</label>
    <input class="form-control" id="orderDate" name="orderDate" type="date">
  </div>
  <button type="submit" class="btn btn-primary">Add order</button>
</form>