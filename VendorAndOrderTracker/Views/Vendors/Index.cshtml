<!DOCTYPE html>
<html lang="en-US">

<head>
  <meta charset="utf-8">
  <title>Pierre's Vendor and Order Tracker</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="stylesheet" href="VendorAndOrderTracker.Solution/VendorAndOrderTracker/wwwroot/css/styles.css">
</head>

<body>
  <div class="container">

    @using VendorAndOrderTracker.Models;

    <h1 class="jumbotron">Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet!</h3>
    }
    else
    {
      <ul>
        @foreach (Vendor vendor in Model)
        {
          <li>
            <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
          </li>
        }
      </ul>
    }

    <p><a href='/vendors/new'>Add a new vendor</p>
    <p><a href='/'>Back home</a></p>

  </div>
</body>

</html>