@{
  Layout = "_Layout";
}

<h1 class="jumbotron">Add a vendor</h1>
<p>Add a vendor here:</p>

<form action="/vendors" method="post">
  <div class="form-group">
    <label for="vendorName">Vendor name: </label>
    <input class="form-control" id="vendorName" name="vendorName" type="text">
  </div>
  <div class="form-group">
    <label for="vendorDescription">Vendor description: </label>
    <input class="form-control" id="vendorDescription" Description="vendorName" type="text">
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>

<p><a href="/">Back home</a></p>
<p><a href="/vendors">Back to vendors.</a></p>